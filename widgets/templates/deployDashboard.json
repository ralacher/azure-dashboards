{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "dashboardName": {
      "type": "string",
      "defaultValue": "Home",
      "metadata": {
        "description": "The name of the dashboard"
      }
    }
  },
  "resources": [
    {
      "apiVersion": "2019-01-01-preview",
      "name": "[parameters('dashboardName')]",
      "type": "Microsoft.Portal/dashboards",
      "location": "[resourceGroup().location]",
      "tags": {
        "hidden-title": "[parameters('dashboardName')]"
      },
      "properties": {
        "lenses": {
          "0": {
            "order": 0,
            "parts": {
              "0": {
                "position": {
                  "x": 0,
                  "y": 0,
                  "colSpan": 3,
                  "rowSpan": 9
                },
                "metadata": {
                  "inputs": [],
                  "type": "Extension/HubsExtension/PartType/MarkdownPart",
                  "settings": {
                    "content": {
                      "settings": {
                        "content": "Links to demo resource groups, tutorials, and training exercises.\n<img src=\"https://msdnshared.blob.core.windows.net/media/2017/05/Webinar-cloud.png\">\n\n### ARM Templates\n[Quickstart Templates](https://github.com/Azure/azure-quickstart-templates)\n<br>\n[Functions Reference](https://docs.microsoft.com/en-us/azure/azure-resource-manager/templates/template-functions)\n<br>\n[Deploy with GitHub](https://docs.microsoft.com/en-us/azure/azure-resource-manager/templates/deploy-github-actions)\n<br>\n[Deploy with Azure DevOps](https://docs.microsoft.com/en-us/azure/azure-resource-manager/templates/add-template-to-azure-pipelines)\n\n### Azure DevOps\n[Demo Generator](https://azuredevopsdemogenerator.azurewebsites.net/)\n\n### Learning\n[Microsoft Learn](https://docs.microsoft.com/en-us/learn/)\n<br>\n[Azure DevOps Labs](http://azuredevopslabs.com/)",
                        "title": "Demos ",
                        "subtitle": "and Tutorials",
                        "markdownSource": 1,
                        "markdownUri": null
                      }
                    }
                  }
                }
              },
              "1": {
                "position": {
                  "x": 3,
                  "y": 0,
                  "colSpan": 2,
                  "rowSpan": 2
                },
                "metadata": {
                  "inputs": [],
                  "type": "Extension/HubsExtension/PartType/MarkdownPart",
                  "settings": {
                    "content": {
                      "settings": {
                        "content": "<span style=\"display:block;text-align:center\">\n<img height=\"95px\" src=\"https://github.com/ralacher/azure-dashboards/blob/main/images/blueprint.png?raw=true\" />\n</span>",
                        "title": "Cloud Adoption Framework",
                        "subtitle": "Governance and Policy",
                        "markdownSource": 1
                      }
                    }
                  }
                }
              },
              "2": {
                "position": {
                  "x": 3,
                  "y": 2,
                  "colSpan": 2,
                  "rowSpan": 2
                },
                "metadata": {
                  "inputs": [],
                  "type": "Extension/HubsExtension/PartType/MarkdownPart",
                  "settings": {
                    "content": {
                      "settings": {
                        "content": "<span style=\"display:block;text-align:center\">\n<a href=\"https://portal.azure.com/#create/Microsoft.Template/uri/https%3A%2F%2Fraw.githubusercontent.com%2Fralacher%2Fazure-dashboards%2Fmain%2Farm-templates%2Fcaf%2FdeployDashboard.json\" target=\"_blank\">\n    <img height=\"25px\" src=\"https://aka.ms/deploytoazurebutton\"/>\n  </a>\n  <img src=\"https://img.shields.io/badge/Time-6 minutes-success\"><br><br></span>\n__Deploy to Azure__ to create the recommended CAF baseline policies, resource groups, and shared services.",
                        "title": "Setup",
                        "subtitle": "Policies and Resources",
                        "markdownSource": 1
                      }
                    }
                  }
                }
              },
              "3": {
                "position": {
                  "x": 3,
                  "y": 4,
                  "colSpan": 2,
                  "rowSpan": 2
                },
                "metadata": {
                  "inputs": [],
                  "type": "Extension/HubsExtension/PartType/ArmActions",
                  "settings": {
                    "content": {
                      "settings": {
                        "title": "Cleanup",
                        "subtitle": "Remove CAF Resources",
                        "uri": "https://google.com",
                        "name": "Delete",
                        "data": ""
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "metadata": {
          "model": {
            "timeRange": {
              "value": {
                "relative": {
                  "duration": 24,
                  "timeUnit": 1
                }
              },
              "type": "MsPortalFx.Composition.Configuration.ValueTypes.TimeRange"
            }
          }
        }
      }
    }
  ]
}
